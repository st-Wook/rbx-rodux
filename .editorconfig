root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = tab
indent_size = 4

[*.{json,css}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.{rs,toml}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[*.snap]
insert_final_newline = true

[*.{lua,luau}]
indent_style = tab
insert_final_newline = true

[*.sh]
indent_size = 2
insert_final_newline = true
